{% extends 'base.html.twig' %}

{% block title %}Devis Show{% endblock %}

{% block body %}
    <h1 class='mt-4'>Devis {{user.firstname}} </h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Categorie</th>
                <th>PrixHt</th>
                <th>Quantite</th>
                <th>Km</th>
                <th>PrixKm</th>
                <th>TotalTTC</th>
            </tr>
        </thead>
        <tbody>
        {% for devi in devis %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{ devi.titre }}</td>
                <td>{{ devi.createdAt|date('d/m/Y') }}</td>
                <td>{{ devi.categorie }}</td>
                <td>{{ devi.prixHt }}</td>
                <td>{{ devi.quantite }}</td>
                <td>{{ devi.km }}</td>
                <td>{{ devi.prixKm }}</td>
                <td>{{ devi.totalTTC }}</td>
                <td>{{ devi.totalTaxe }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="total">
        <h2>Total Taxe</h2>
        <p>{{taxe}}€</p>
        <h2>Total TTC</h2>
        <p>{{total}}€</p>    
    </div>
     <a href="{{ path('app_devis_export_excel') }}" class="btn btn-primary">Export to Excel</a>
{% endblock %}