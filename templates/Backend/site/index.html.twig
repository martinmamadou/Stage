{# templates/site/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Sites{% endblock %}

{% block body %}
    <h1>Liste des Sites</h1>

    <pre>
        {{ dump(_context) }}
    </pre>

    {% if sites is not empty %}
    
        <ul>
            {% for site in sites %}
                <li>
                    <strong>{{ site.client.name }}</strong>: {{ site.name }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun site trouv√© pour ce client.</p>
    {% endif %}
{% endblock %}
